source :rubygems

gem 'rails'
gem 'sqlite3'
gem 'json'
gem 'authlogic'
gem 'haml'
gem 'rest-client'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development, :test do
  gem 'ruby-debug19'
end